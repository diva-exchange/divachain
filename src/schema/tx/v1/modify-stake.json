{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/schema/tx/v1/modify-stake.json",

  "type": "object",
  "properties": {
    "command": {
      "type": "string",
      "pattern": "^modifyStake$"
    },
    "publicKey": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "ident": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{1,32}$"
    },
    "stake": {
      "type": "integer",
      "minimum": -1000,
      "maximum": 1000
    }
  },
  "additionalProperties": false,
  "required": [
    "command",
    "publicKey",
    "ident",
    "stake"
  ]
}