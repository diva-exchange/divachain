{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/schema/tx/v1/add-peer.json",

  "type": "object",
  "properties": {
    "command": {
      "type": "string",
      "pattern": "^addPeer$"
    },
    "http": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024
    },
    "udp": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024
    },
    "publicKey": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "command",
    "http",
    "udp",
    "publicKey"
  ]
}