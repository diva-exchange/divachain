{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/schema/tx/v1/data.json",

  "type": "object",
  "properties": {
    "command": {
      "type": "string",
      "pattern": "^data$"
    },
    "ns": {
      "type": "string",
      "pattern": "^([A-Za-z0-9_-]{2,16}:){1,7}[A-Za-z0-9_-]{2,16}$"
    },
    "d": {
      "type": "string",
      "maxLength": 8024
    }
  },
  "additionalProperties": false,
  "required": [
    "command",
    "ns",
    "d"
  ]
}