{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/transaction/addAsset.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "command": {
      "type": "string",
      "pattern": "^addAsset$"
    },
    "publicKey": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "identAssetPair": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9.-_]{1,64}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "command",
    "publicKey",
    "identAssetPair"
  ]
}