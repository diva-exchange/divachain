{
  "name": "@diva.exchange/divachain",
  "version": "0.1.0",
  "description": "diva - Distributed value exchange upholding security, reliability and privacy",
  "keywords": [
    "blockchain",
    "pbft",
    "bft",
    "consensus",
    "diva.exchange",
    "p2p",
    "i2p"
  ],
  "author": "Konrad Baechler <konrad@diva.exchange> (https://diva.exchange)",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/diva.exchange/diva-blockchain.git"
  },
  "scripts": {
    "build": "bin/build.sh",
    "lint": "prettier -w \"**/*.ts\" && eslint --fix src/ test/ --ext .ts",
    "start": "NODE_ENV=production node dist/main.js",
    "start-dev": "NODE_ENV=development node --enable-source-maps dist/main.js | pino-pretty",
    "test": "bin/clean-testenv.sh ; TS_NODE_PROJECT=./test/tsconfig.json NODE_ENV=test LOG_LEVEL=trace nyc mocha"
  },
  "bin": "dist/main.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "dist/schema/**/*",
      "genesis/",
      "node_modules/sodium-native/prebuilds/linux-x64/node.napi.node"
    ],
    "targets": [
      "node12-linux"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "@hapi/hapi": "^20.1.3",
    "ajv": "^8.3.0",
    "base64-url": "^2.3.3",
    "nanoid": "^3.1.23",
    "pino": "^6.11.3",
    "socks-proxy-agent": "^5.0.0",
    "sodium-native": "^3.2.1",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@testdeck/mocha": "^0.1.2",
    "@tsconfig/node12": "^1.0.7",
    "@types/base64-url": "^2.2.0",
    "@types/chai": "^4.2.18",
    "@types/hapi__hapi": "^20.0.8",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.3",
    "@types/pino": "^6.3.8",
    "@types/sodium-native": "^2.3.5",
    "@types/tunnel": "^0.0.2",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "ajv-cli": "^5.0.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^8.4.0",
    "npm-check-updates": "^11.5.11",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.8.0",
    "prettier": "^2.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
