{
  "name": "@diva.exchange/divachain",
  "version": "0.50.1",
  "description": "diva - Distributed value exchange upholding security, reliability and privacy",
  "type": "module",
  "bin": "./dist/main.js",
  "exports": {
    ".": "./dist/main.js"
  },
  "keywords": [
    "blockchain",
    "pbft",
    "bft",
    "consensus",
    "diva.exchange",
    "p2p",
    "i2p"
  ],
  "author": "DIVA.EXCHANGE Association <contact@diva.exchange> (https://diva.exchange)",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/diva-exchange/divachain.git"
  },
  "scripts": {
    "build": "bin/build.sh",
    "build-pkg": "bin/build-pkg.sh",
    "clean": "rm -rf dist/*",
    "lint": "prettier -w \"**/*.ts\" && eslint --fix src/ test/ --ext .ts",
    "start": "NODE_ENV=production node dist/main.js | pino-pretty -t -i pid,hostname",
    "start-dev": "IS_TESTNET=1 BOOTSTRAP=http://diva.i2p/testnet IP=0.0.0.0 I2P_SOCKS_HOST=172.19.75.11 I2P_SAM_HTTP_HOST=172.19.75.11 I2P_SAM_UDP_HOST=172.19.75.12 I2P_SAM_FORWARD_HTTP_HOST=172.19.75.1 I2P_SAM_FORWARD_UDP_HOST=172.19.75.1 NODE_ENV=development node dist/main.js | pino-pretty -t -i pid,hostname",
    "clean-test": "test/bin/clean-testenv.sh",
    "test": "npm run build && npm run clean-test && tsc -p ./test/tsconfig.json && NODE_ENV=test LOG_LEVEL=trace DEBUG_PERFORMANCE=1 c8 mocha",
    "clean-simulator": "test/bin/clean-simulator.sh",
    "simulate": "npm run clean-simulator && tsc -p ./test/simulator/tsconfig.json && NODE_ENV=development node test/compiled-simulator/*.js | pino-pretty -t -i pid,hostname"
  },
  "pkg": {
    "scripts": "dist/bundle.js",
    "assets": [
      "dist/version",
      "genesis/*",
      "node_modules/sodium-native/prebuilds/linux-x64/*"
    ],
    "targets": [
      "node18-linux-x64"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@diva.exchange/i2p-sam": "^5.4.1",
    "ajv": "^8.12.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "level": "^8.0.0",
    "nanoid": "^5.0.4",
    "pino": "^8.17.2",
    "rfc4648": "^1.5.3",
    "simple-get": "^4.0.1",
    "socks-proxy-agent": "^8.0.2",
    "sodium-native": "^4.0.5",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/chai": "^4.3.11",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.41",
    "@types/http-errors": "^2.0.4",
    "@types/level": "^6.0.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.6",
    "@types/sodium-native": "^2.3.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "ajv-cli": "^5.0.0",
    "c8": "^9.1.0",
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.2.0",
    "pino-pretty": "^10.3.1",
    "pkg": "^5.8.1",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
