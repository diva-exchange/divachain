{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/lock.json",

  "type": "object",
  "properties": {
    "type": {
      "type": "integer",
      "minimum": 3,
      "maximum": 3
    },
    "origin": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "height": {
      "type": "integer",
      "minimum": 1
    },
    "tx": {
      "type": "array",
      "items": {
        "$ref": "/schema/block/v3/transaction/tx.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "sig": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{86}$"
    }
  },
  "required": [
    "type",
    "origin",
    "height",
    "tx",
    "sig"
  ],
  "additionalProperties": false
}