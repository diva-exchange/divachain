{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/message.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "origin": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "dest": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$|^$"
    },
    "data": {
      "oneOf": [
        {
          "$ref": "add-tx.json"
        },
        {
          "$ref": "propose-block.json"
        },
        {
          "$ref": "sign-block.json"
        },
        {
          "$ref": "confirm-block.json"
        },
        {
          "$ref": "status.json"
        }
      ]
    }
  },
  "required": [
    "seq",
    "origin",
    "dest",
    "data"
  ],
  "additionalProperties": false
}