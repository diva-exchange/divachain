{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/message.json",

  "type": "object",
  "properties": {
    "ident": {
      "type": "string",
      "pattern": "^[A-Za-z0-9,_-]{1,128}$"
    },
    "data": {
      "oneOf": [
        {
          "$ref": "auth.json"
        },
        {
          "$ref": "challenge.json"
        },
        {
          "$ref": "lock.json"
        },
        {
          "$ref": "sync.json"
        }
      ]
    }
  },
  "required": [
    "ident",
    "data"
  ],
  "additionalProperties": false
}