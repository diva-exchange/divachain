{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/confirm-block.json",

  "type": "object",
  "properties": {
    "type": {
      "type": "integer",
      "minimum": 4,
      "maximum": 4
    },
    "hash": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "votes": {
      "type": "array",
      "items": {
        "$ref": "/schema/block/v7/vote.json"
      },
      "minItems": 1,
      "maxItems": 16,
      "uniqueItems": true
    }
  },
  "required": [
    "type",
    "hash",
    "votes"
  ],
  "additionalProperties": false
}