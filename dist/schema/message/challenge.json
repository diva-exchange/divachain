{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/message/challenge.json",

  "type": "object",
  "properties": {
    "type": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1
    },
    "challenge": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{32}$"
    }
  },
  "required": [
    "type",
    "challenge"
  ],
  "additionalProperties": false
}