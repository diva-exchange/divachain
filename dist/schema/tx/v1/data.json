{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "/schema/tx/v1/data.json",
    "type": "object",
    "properties": {
        "command": {
            "type": "string",
            "pattern": "^data$"
        },
        "ns": {
            "type": "string",
            "pattern": "^([A-Za-z_-]{4,15}:){1,4}[A-Za-z0-9_-]{1,64}$"
        },
        "d": {
            "type": "string",
            "maxLength": 1024
        }
    },
    "additionalProperties": false,
    "required": [
        "command",
        "ns",
        "d"
    ]
}
