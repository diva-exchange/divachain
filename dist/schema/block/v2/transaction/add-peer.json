{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/v2/transaction/add-peer.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "command": {
      "type": "string",
      "pattern": "^addPeer$"
    },
    "host": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{5,64}$"
    },
    "port": {
      "type": "integer",
      "minimum": 1024,
      "maximum": 49151
    },
    "publicKey": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "command",
    "host",
    "port",
    "publicKey"
  ]
}