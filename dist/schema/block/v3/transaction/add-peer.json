{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/v3/transaction/add-peer.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "command": {
      "type": "string",
      "pattern": "^addPeer$"
    },
    "address": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "destination": {
      "type": "string",
      "maxLength": 1024
    },
    "publicKey": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "command",
    "address",
    "destination",
    "publicKey"
  ]
}