{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/v1/transaction/tx.json",

  "type": "object",
  "properties": {
    "ident": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$"
    },
    "origin": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "commands": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "add-peer.json"
          },
          {
            "$ref": "remove-peer.json"
          },
          {
            "$ref": "modify-stake.json"
          },
          {
            "$ref": "data.json"
          },
          {
            "$ref": "decision.json"
          }
        ]
      },
      "minItems": 1,
      "maxItems": 32,
      "uniqueItems": true
    },
    "sig": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{86}$"
    }
  },
  "required": [
    "ident",
    "origin",
    "commands",
    "sig"
  ],
  "additionalProperties": false
}